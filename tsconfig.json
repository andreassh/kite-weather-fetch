{
  "compilerOptions": {
    "outDir": "./build/",
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es5",
    "sourceMap": true,
    "allowJs": true,
    "lib": [ "ESNext", "dom"],
    "esModuleInterop": true,
    "moduleResolution": "node"
  },
  "include": ["**/*.ts", "**/*.d.ts", ".eslintrc.cjs", "webpack.config.js"],
  "exclude": ["node_modules/**"],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
  }
}